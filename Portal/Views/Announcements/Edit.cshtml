@model Portal.Models.Announcement
@using Portal.Authentication;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/LayoutForAdmin.cshtml";
}

<br /><br />
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Announcement</h4>
