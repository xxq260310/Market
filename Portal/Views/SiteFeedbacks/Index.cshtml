@model IEnumerable<Portal.Models.SiteFeedback>
@using Portal.Authentication;
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/LayoutForAdmin.cshtml";
}
<br /><br />
<h2>Site Feedback</h2>

<p>
    @Html.ActionLinkAuthorized("Create New", "Create" ,false)
</p>
<table class="table-layout-auto">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLinkAuthorized("Edit", "Edit", new { id = item.SiteFeedbackId }, false) &nbsp;
            @Html.ActionLinkAuthorized("Details", "Details", new { id = item.SiteFeedbackId }, false) &nbsp;
            @Html.ActionLinkAuthorized("Delete", "Delete", new { id = item.SiteFeedbackId } , false)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdateDate)
        </td>
    </tr>
}

</table>
