@{
    ViewBag.Title = "我的购物车";
    var index = 0;
}
<script type="text/javascript">
    $(function () {
        var menu_ul = $('.menu > li > ul'),
               menu_a = $('.menu > li > a');
        menu_ul.hide();
        menu_a.click(function (e) {
            e.preventDefault();
            if (!$(this).hasClass('active')) {
                menu_a.removeClass('active');
                menu_ul.filter(':visible').slideUp('normal');
                $(this).addClass('active').next().stop(true, true).slideDown('normal');
            } else {
                $(this).removeClass('active');
                $(this).next().stop(true, true).slideUp('normal');
            }
        });
    });

    $(function () {
        var length = $("table").find("tr").length;
        for (var i = 0; i < length; i++) {
            var checked = $("input[type='checkbox'][name='[" + i + "].singlecommodity']");
            if ($(checked).prop("checked") == true) {
                var price = $(checked).parent().parent().children().eq(4).children().val();
                $(checked).parent().parent().parent().children().eq(2).children().eq(4).children().eq(1).children().eq(0).html("￥" + price + "");
            }
            else {
                $(checked).parent().parent().parent().children().eq(2).children().eq(4).children().eq(1).children().eq(0).html("￥0.00");
            }
        }
    });

    function reverseChecked() {
        var checked = $("input[type='checkbox'][name='singlecommodity']");
        $(checked).each(function () {
            $(this).prop("checked", !($(this).prop("checked")));
        })
    }


</script>
